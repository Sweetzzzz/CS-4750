{
  "rules": {
    "posts": {
      ".indexOn": ["userId", "timestamp"],
      "$postId": {
        "comments": {
          ".indexOn": ["timestamp"]
        },
        "likes": {
          ".indexOn": [".value"]
        }
      }
    },
    "users": {
      "$userId": {
        "following": {
          ".indexOn": [".value"]
        },
        "followers": {
          ".indexOn": [".value"]
        }
      }
    }
  }
} 